    <h1>SGPA and CGPA Calculator</h1>
    <form onsubmit="calculateSGPACGPA(); return false;">
        <label for="pt">Phase Transformations:</label>
        <input type="number" id="pt" step="any" required>
        
        <label for="ce">Corrosion Engineering:</label>
        <input type="number" id="ce" step="any" required>
        
        <label for="tf">Thin Films:</label>
        <input type="number" id="tf" step="any" required>
        
        <label for="mf">Metal Forming:</label>
        <input type="number" id="mf" step="any" required>
        
        <label for="mp">Major Project:</label>
        <input type="number" id="mp" step="any" required>
        
        <label for="se">Seminar:</label>
        <input type="number" id="se" step="any" required>

        <label for="elective1">1st 3-Credit Elective (Optional):</label>
        <input type="number" id="elective1" step="any">
        
        <label for="elective2">2nd 3-Credit Elective (Optional):</label>
        <input type="number" id="elective2" step="any">
        
        <label for="previousCGPA">Previous CGPA:</label>
        <input type="number" id="previousCGPA" step="any" required>
        
        <label for="previousCredits">Previous Total Credits:</label>
        <input type="number" id="previousCredits" step="any" required>
        
        <button type="submit">Calculate</button>
    </form>

    <h2>Results</h2>
    <p id="resultSGPA"></p>
    <p id="resultCGPA"></p>

    <script>
        function calculateSGPACGPA() {
            // Get values from input fields
            let pt = parseFloat(document.getElementById('pt').value) || 0;
            let ce = parseFloat(document.getElementById('ce').value) || 0;
            let tf = parseFloat(document.getElementById('tf').value) || 0;
            let mf = parseFloat(document.getElementById('mf').value) || 0;
            let mp = parseFloat(document.getElementById('mp').value) || 0;
            let se = parseFloat(document.getElementById('se').value) || 0;
            let elective1 = parseFloat(document.getElementById('elective1').value) || 0;
            let elective2 = parseFloat(document.getElementById('elective2').value) || 0;
            let previousCGPA = parseFloat(document.getElementById('previousCGPA').value) || 0;
            let previousCredits = parseFloat(document.getElementById('previousCredits').value) || 0;

            // Ensure all inputs are numbers
            if (isNaN(pt) || isNaN(ce) || isNaN(tf) || isNaN(mf) || isNaN(mp) || isNaN(se) || isNaN(elective1) || isNaN(elective2) || isNaN(previousCGPA) || isNaN(previousCredits)) {
                alert("Please enter valid numbers for all fields.");
                return;
            }

            // Determine total credits and weighted sum for SGPA
            let totalCredits = 3 + 4 + 3 + 3 + 1;
            let weightedSum = pt * 3 + ce * 4 + tf * 3 + mf * 3 + mp * 1;

            // Include electives if provided
            if (elective1) {
                totalCredits += 3;
                weightedSum += elective1 * 3;
            }
            if (elective2) {
                totalCredits += 3;
                weightedSum += elective2 * 3;
            }

            // Calculate SGPA
            let sgpa = (weightedSum / totalCredits).toFixed(2);

            // Calculate CGPA
            let additionalCredits = totalCredits; // New credits including electives if present
            let cgpa = ((previousCGPA * previousCredits + sgpa * additionalCredits) / (previousCredits + additionalCredits)).toFixed(2);

            // Display the results
            document.getElementById('resultSGPA').innerText = "SGPA: " + sgpa;
            document.getElementById('resultCGPA').innerText = "CGPA: " + cgpa;

            // Change background color based on CGPA
            if (cgpa > 8) {
                document.body.style.background = '#32CD32'; /* Green background */
            } else {
                document.body.style.background = 'linear-gradient(to bottom right, #87CEEB, #ffffff)'; /* Blue to white gradient */
            }
        }
    </script>
</body>
